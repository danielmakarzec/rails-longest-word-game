<div class="container">
  <h1>NEW GAME</h1>

  <div id="letters">
    <% @letters.each do |letter| %>
    <p><%= letter %></p>
    <% end %>
  </div>

<p>What is the longest word you can find?</p>

  <form class="my_form" action="/score" method="post">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
    <input class="my_input" type="text" name="word" placeholder="guess.." >
    <input class="btn" type="submit" value="Play">
  </form>
</div>
